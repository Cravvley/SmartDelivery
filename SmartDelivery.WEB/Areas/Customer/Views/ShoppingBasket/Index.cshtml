@model IList<SmartDelivery.Data.Entities.Restaurant>

@{
    ViewData["Title"] = "restaurants basket card list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="col-12 text-center">
    <h1 class="text-secondary"> restaurants basket card list</h1>
</div>

<form method="get">
    <br />
    <br />
    <div class="p-1">
        @if (Model.Count() > 0)
        {
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Restaurant name
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        Postal code
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
                {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Id)
            </td>
            <td>
                <a class="btn text-white" style="background-color:#45CB85;" asp-action="UserShoppingCartsFromRestaurant"  asp-route-Id="@item.Id">
                    <i class="fas fa-list-alt"></i>
                </a>
            </td>
        </tr>
                }
        </table>
        }
        else
        {
        <p>No restaurants exist...</p>
        }
    </div>
    <br />
</form>