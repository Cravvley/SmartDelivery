@model SmartDelivery.Data.Entities.Category

@{ ViewData["Title"] = "Delete category";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<br />
<h1 class="text-danger mb-5 text-warning">Delete @Model.Title category</h1>
<br />

<form method="post" asp-action="Delete">
    <div class="form-group row col-12 p-0 d-flex justify-content-center m-0 font-weight-bold text-info">
        <div class="col-2">
            <label asp-for="Title" class="col-form-label font-weight-bold text-info">Category name: </label>
        </div>
        <div class="col-5">
            <input asp-for="Title" disabled class="form-control" />
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-5 mt-3 offset-2">
            <partial name="PartialView/_DeleteAndBackToListButton" model="Model.Id" />
        </div>
    </div>
</form>