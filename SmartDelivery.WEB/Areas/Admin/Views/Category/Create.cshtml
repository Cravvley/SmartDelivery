@model SmartDelivery.Data.Entities.Category
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<form method="post" asp-action="Create">
    <div class="d-flex justify-content-center font-weight-bold text-info">
        <input type="hidden" asp-for="ParentId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row col-12 p-0 d-flex justify-content-center">
            <div class="col-2">
                <label asp-for="Title" class="col-form-label font-weight-bold text-info">Category name:</label>
            </div>
            <div class="col-5">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger d-flex justify-content-center"></span>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-5 offset-2">
            <partial name="PartialView/_CreateAndBackToListButton" />
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}