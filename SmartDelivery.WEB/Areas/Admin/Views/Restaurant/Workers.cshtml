@model SmartDelivery.WEB.Models.UserListViewModel

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col-12 text-center">
        <h1 class="text-secondary">Workers list</h1>
    </div>
</div>
<br />
<form method="get">
    <partial name="PartialView/_SearchByEmail" />
    <div>
        @if (Model.Users.Count() > 0)
        {
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            User name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Phone number
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.LastModificationAt)
                        </td>
                        <td></td>
                    </tr>
                }
            </table>
            <partial name="PartialView/_Pagination" model="@Model.PagingInfo" />
        }
        else
        {
            <p>No worker exists...</p>
        }
    </div>
</form>