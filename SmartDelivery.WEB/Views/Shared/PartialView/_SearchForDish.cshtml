<div class="row container m-0 p-1">
    <div class="col-9">
        <div class="row" style="padding-top:10px">
            <div class="col-5 p-0">
                @Html.Editor("productName", new { htmlAttributes = new { @class = "form-control", @placeholder = "dish name..." } })
            </div>
            <div class="col-1 p-0">
            </div>
            <div class="col-5 p-0">
                @Html.Editor("categoryName", new { htmlAttributes = new { @class = "form-control", @placeholder = "dish category..." } })
            </div>
        </div>
    </div>
    <div class="col-3">
        <div class="row" style="padding-top:10px;">
            <button type="submit" name="submit" value="Search" class="btn btn-info form-control">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</div>