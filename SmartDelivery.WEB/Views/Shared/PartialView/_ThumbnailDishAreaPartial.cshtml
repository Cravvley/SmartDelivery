@model IEnumerable<SmartDelivery.Data.Entities.Dish>

<style>
    .cartDish {
        transition-duration: 0.15s;
    }

        .cartDish:hover {
            -webkit-box-shadow: 3px 3px 16px 2px rgba(0,0,0,0.36);
            -moz-box-shadow: 3px 3px 16px 2px rgba(0,0,0,0.36);
            box-shadow: 3px 3px 16px 2px rgba(0,0,0,0.36);
            transition-delay: 0.1s;
        }
</style>
@if (Model.Count() > 0)
{
<div class="col-12  menu-restaurant">
  
    @foreach (var item in Model)
    {
<a asp-action="DishDetails" class="cartDish border border-secondary rounded col-12 d-block" style="margin-bottom:10px; margin-top:10px; padding:10px; text-decoration: none; color: black;" asp-route-id="@item.Id">
    <div>
        <div class="row">
            @{ if (item.Image != null)
                {
                    var base64 = Convert.ToBase64String(item.Image);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);

<div class="col-md-3 col-sm-12">
    <img src="@imgsrc" width="99%" style="border-radius:5px;border:1px solid #bbb9b9" />
</div> }
                    else
                    {
<div class="col-md-3 col-sm-12">
    <img src="" width="99%" style="border-radius:5px;border:1px solid #bbb9b9" />
</div> } }
            <div class="col-md-9 col-sm-12">
                <div class="row pr-3">
                    <div class="col-8">
                        <label class="text-primary" style="font-size:21px;color:maroon">@item.Title</label>
                    </div>
                    <div class="col-4 text-right" style="color:maroon">
                        <h4>@item.GrossPrice $</h4>
                    </div>
                </div>
                <div class="row col-12 text-justify d-none d-md-block">
                    <p>@Html.Raw(item.Category.Title)</p>
                </div>
            </div>
        </div>
    </div>
</a>}
    <div class="p-4"></div>
</div>}